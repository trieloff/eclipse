{
  "name": "eclipse-2026-spain",
  "version": "1.0.0",
  "type": "module",
  "description": "Interactive map of the 2026 solar eclipse path over Spain",
  "scripts": {
    "dev": "live-server --port=3000 --open=/index.html --ignorePattern='\\.(json|md|nc|svg)$|node_modules|data/|scripts/'",
    "start": "live-server --port=3000 --ignorePattern='\\.(json|md|nc|svg)$|node_modules|data/|scripts/'",
    "fetch-path": "node scripts/fetch-eclipse-path.js",
    "fetch-2026": "node scripts/fetch-eclipse-path.js https://eclipse.gsfc.nasa.gov/SEpath/SEpath2001/SE2026Aug12Tpath.html --min-lon -15 --max-lon 10 > data/nasa-path-raw.json"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "puppeteer-core": "24.34.0"
  },
  "keywords": [
    "eclipse",
    "spain",
    "2026",
    "solar-eclipse",
    "map"
  ],
  "license": "MIT"
}
